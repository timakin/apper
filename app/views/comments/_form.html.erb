<%= form_for(@comment) do |f| %>
<div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %> 
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :commentable_id %>
    <%= f.hidden_field :commentable_type %>
    <%= f.hidden_field :item_id, :value => (params[:id]) %>
 </div>
 <div class="actions">
    <%= f.submit :class=> "btn" %>
 </div>
 <% end %>
