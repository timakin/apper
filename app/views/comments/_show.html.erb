<table>
  <tr>
    <th>comment</th>
  </tr>

<% @item.comments.each do |comment| %>
<div>
  <tr>
     <td><%= comment.comment %> </td>
     <td><%= comment.created_at %></td>
     <td><%= comment.user_id %></td>
     <td><%= comment.user.email %></td>
     <td><%= comment.item.title %></td>
  </tr>
</div>
<% end %>
</table>